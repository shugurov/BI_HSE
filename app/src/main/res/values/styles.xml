<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="SettingsLayoutItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingsTextItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="Fillable">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="Wrappable">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="BillboardWrapper" parent="Fillable">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="BillboardItemBottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="BillboardItemBottomGravity" parent="BillboardItemBottom">
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="BillboardItemTopGravity" parent="BillboardItemBottom">
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="EventWrapper">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EventGUIElement" parent="Wrappable">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ScheduleImage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">@dimen/standard</item>
    </style>
</resources>
