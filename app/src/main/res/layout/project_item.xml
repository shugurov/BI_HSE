<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/standard"
              android:paddingLeft="@dimen/standard"
              android:paddingRight="@dimen/standard"
              android:paddingTop="@dimen/standard">

    <ImageView
        android:id="@+id/project_item_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/standard"
        android:layout_weight="5"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/project_item_headline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"/>
</LinearLayout>