<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="bottom"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:background="@color/reference_color"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <LinearLayout
            style="@style/BillboardWrapper">

            <ImageView
                android:id="@+id/bs1"
                style="@style/BillboardItemTopGravity"
                android:src="@drawable/course1"/>
        </LinearLayout>

        <LinearLayout
            style="@style/BillboardWrapper">

            <ImageView
                android:id="@+id/ms1"
                style="@style/BillboardItemBottomGravity"
                android:src="@drawable/course1"/>
        </LinearLayout>

        <LinearLayout
            style="@style/BillboardWrapper">

            <ImageView
                android:id="@+id/bs2"
                style="@style/BillboardItemTopGravity"
                android:src="@drawable/course2"/>
        </LinearLayout>

        <LinearLayout
            style="@style/BillboardWrapper">

            <ImageView
                android:id="@+id/bs3"
                style="@style/BillboardItemTopGravity"
                android:src="@drawable/course3"/>
        </LinearLayout>

        <LinearLayout
            style="@style/BillboardWrapper">

            <ImageView
                android:id="@+id/ms2"
                style="@style/BillboardItemBottomGravity"
                android:src="@drawable/course2"/>
        </LinearLayout>

        <LinearLayout
            style="@style/BillboardWrapper">

            <ImageView
                android:id="@+id/bs4"
                style="@style/BillboardItemTopGravity"
                android:src="@drawable/course4"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>